<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.javaee2.dao.UserMapper">

    <select id="getUserById" resultType="com.example.javaee2.pojo.User">
        SELECT * FROM user WHERE uid = #{id}
    </select>

    <select id="getAllUser" resultType="com.example.javaee2.pojo.User">
        SELECT * FROM user
    </select>

    <select id="getUserByUsername" resultType="com.example.javaee2.pojo.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <insert id="insertUser" parameterType="com.example.javaee2.pojo.User">
        INSERT INTO user (username, password) VALUES (#{username}, #{password})
    </insert>




</mapper>
