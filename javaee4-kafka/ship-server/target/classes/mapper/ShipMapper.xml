<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.shipserver.mapper.ShipMapper">

    <select id="getAllShip" resultType="org.example.shipserver.entity.Ship">
        SELECT * FROM ship
    </select>

    <select id="countAllShip" resultType="int">
        SELECT COUNT(*) FROM ship
    </select>

    <select id="getShipsByPage" resultType="org.example.shipserver.entity.Ship">
        SELECT * FROM ship LIMIT #{start}, #{pageSize}
    </select>

    <select id="getShipById" resultType="org.example.shipserver.entity.Ship">
        SELECT * FROM ship WHERE shipId = #{id}
    </select>
    <select id="getShipsByLevel" resultType="org.example.shipserver.entity.Ship">
        SELECT * FROM ship WHERE shipId IN (SELECT shipId FROM shipLevel WHERE level = #{level})
    </select>


</mapper>