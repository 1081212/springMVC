<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.orderserver.mapper.OrderShipMapper">
    <insert id="insertOne" parameterType="org.example.orderserver.entity.OrderShip">
        INSERT INTO orderShip VALUES (#{orderId},#{shipId},0)
    </insert>


    <update id="acceptOrder" parameterType="org.example.orderserver.entity.OrderShip">
        UPDATE orderShip SET state = 1 WHERE orderId = #{orderId} AND shipId = #{shipId}
    </update>
</mapper>